@using PurpleBuzz_Backend.Areas.Admin.ViewModels.TeamMember
@model TeamMemberUpdateViewModel

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Update Team member
                        </p>
                        <form method="post" enctype="multipart/form-data" asp-action="update" asp-controller="teammember" asp-area="admin">
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input class="form-control" asp-for="Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                
                                <input type="hidden" class="form-control" asp-for="PhotoPath">
                                
                            </div>
                            <div class="form-group">
                                <label asp-for="Surname">Surname</label>
                                <input class="form-control" asp-for="Surname">
                                <span class="text-danger" asp-validation-for="Surname"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Position">Position</label>
                                <input class="form-control" asp-for="Position">
                                <span class="text-danger" asp-validation-for="Position"></span>
                            </div>
                            <div class="form-group ">
                            <div class="d-flex justify-content-start"><img style="width:100px; height:100px; aspect-ratio:1/1; object-fit:cover" src="~/assets/img/@Model.PhotoPath" /></div></div>
                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input class="form-control" asp-for="Photo">
                                <span class="text-danger" asp-validation-for="Photo"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>